{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-crust",
  "version": "0.1.0",
  "identifier": "com.theri.tauri-crust",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CRust | Compilador C++ feito em Rust",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Compilador C++ feito em Rust.",
    "longDescription": "Compilador léxico e sintático para C++ feito em Rust com Tauri, React e TypeScript.",
    "category": "DeveloperTool"
  }
}
